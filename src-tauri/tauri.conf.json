{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Boke",
  "version": "0.1.0",
  "identifier": "com.boke.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Boke",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFNEQ1MzIwNTM0Q0NFODcKUldTSHpreFRJRk5ON3FlVis0TmVoblhDcWFSNm5hVjZ4WG1rMEQ4V3FJV25xZjl0dmM4dWQ3dXkK",
      "endpoints": [
        "https://github.com/OWNER/boke/releases/latest/download/latest.json"
      ]
    }
  }
}
